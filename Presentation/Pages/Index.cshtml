@page
@model Presentation.Pages.Orders.Index

@{
ViewData["Title"] = "Orders";
}

@if (TempData["SuccessMessage"] != null)
{
<div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <br>
    <h3 class="display-6">Orders list:</h3>
</div>

<div class="row">
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-dark">
            <tr>
                <th scope="col">
                    Order Id
                </th>
                <th scope="col">
                    Sender City
                </th>
                <th scope="col">
                    Sender Location
                </th>
                <th scope="col">
                    Recipient City
                </th>
                <th scope="col">
                    Recipient Location
                </th>
                <th scope="col">
                    Load Weight
                </th>
                <th scope="col">
                    Pickup Date
                </th>


                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.AllOrders)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipientCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipientLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoadWeight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PickupDate)
                </td>

                <td>
                    <a asp-page="/Orders/OrderDetails" asp-route-id="@item.OrderId" class="btn btn-primary">Details</a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>  
